@using MusicEShop.Domain
﻿@using Microsoft.Extensions.Options
@model MusicEShop.Domain.DTO.CartDTO

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Product name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.CartItem.Count(); i++)
        {

            var item = Model.CartItem[i];
            @if (item.AlbumId != null)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Album.Title)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Album.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        |
                        <a asp-action="DeleteFromShoppingCart" asp-controller="ShoppingCart" asp-route-Ak="@item.Album.Id">Delete</a>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Track.Title)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Track.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        |
                        <a asp-action="DeleteFromShoppingCart" asp-controller="ShoppingCart" asp-route-Ak="@item.Track.Id">Delete</a>
                    </td>
                </tr>


            }

        }
        <a href="/ShoppingCart/Order" class="btn btn-primary">Confirm Order</a>

    </tbody>
    <tfoot>
    <th><b>Total:</b></th>

    <th></th>
    <th></th>
    <th></th>

    <th><b>@Model.TotalPrice</b></th>

    </tfoot>
</table>

