@model IEnumerable<MusicEShop.Domain.DomainModels.Track>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mt-4">Tracks</h1>

<div class="container">
    <div class="text-center my-3">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn custom-btn" asp-action="Create">Create New Track</a>
        }

    </div>

    @for (int i = 0; i < Model.Count(); i++)
    {
        var item = Model.ElementAt(i);
        if (i % 4 == 0)
        {
            @:<div class="row mb-4">
        }

        <div class="col-md-3">
            <div class="card" style="width: 100%; height: auto;">
                <img class="card-img-top" src="@item.Album.CoverImage" alt="@item.Title" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text"><strong>Genre:</strong> @item.Album.Genre</p>
                    <p class="card-text"><strong>Release Date:</strong> @item.Album.ReleaseDate</p>
                    <p class="card-text"><strong>Artist:</strong> @item.Album.Artist.Name</p>
                    <h6><strong>Price:</strong> $@item.Price</h6>
                </div>
                <div class="card-footer">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: midnightblue; color: white; border: none;">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm "style="background-color: darkred; color: white; border: none;">Delete</a>
                    }
                    
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: darkolivegreen; color: white; border: none;">Details</a>
                    <a asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-md" style="background-color: green; color: white; border: none;margin-top: 10px ;">Add to Cart</a>
                </div>
            </div>
        </div>

        if ((i + 1) % 4 == 0 || i == Model.Count() - 1)
    {
        @:</div> 
    }
    }


   
</div>

